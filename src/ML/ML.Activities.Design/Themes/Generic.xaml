<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:ML.Activities.Design"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
    xmlns:p="clr-namespace:ML.Activities.Design.Properties">

  <!--<src:ActivityDescriptionConverter x:Key="ActivityDescriptionConverter" />-->
  <Style TargetType="{x:Type src:ActivityDecoratorControl}" x:Key="ActivityDecoratorStyle">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type src:ActivityDecoratorControl}">
          <Grid>
            <Grid>
              <Grid.Style>
                <Style>
                  <Setter Property="Grid.Visibility" Value="Visible" />
                  <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=ShowExpanded}" Value="true">
                      <Setter Property="Grid.Visibility" Value="Collapsed" />
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </Grid.Style>
              <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic" Foreground="#FF6D6D6D" Text="{x:Static p:Resources.DoubleClickToView}"/>
            </Grid>
            <Grid>
              <Grid.Style>
                <Style>
                  <Setter Property="Grid.Visibility" Value="Visible" />
                  <Setter Property="Grid.MinWidth" Value="300" />

                  <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=ShowExpanded}" Value="false">
                      <Setter Property="Grid.MinWidth" Value="30" />
                      <Setter Property="Grid.Visibility" Value="Collapsed" />
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </Grid.Style>
              <ContentPresenter />
            </Grid>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

    <Style.Resources>
      <!-- Nested styles, yay!-->
      <Style TargetType="{x:Type sapv:ExpressionTextBox}">
        <Setter Property="Height" Value="23" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
        <Setter Property="MaxLines" Value="1" />
      </Style>

      <Style TargetType="{x:Type ComboBox}">
        <Setter Property="Height" Value="23" />
      </Style>

      <!--<Style TargetType="{x:Type TextBox}">
                <Setter Property="Height" Value="23" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>-->

      <Style BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" TargetType="Button">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#D0D7E2" />
        <Setter Property="Height" Value="23" />
      </Style>
    </Style.Resources>
  </Style>

  <Style TargetType="{x:Type ComboBox}" x:Key="NonEditableComboboxStyle" BasedOn="{StaticResource {x:Type ComboBox}}">
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
      <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
      <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
      <Setter Property="FrameworkElement.FocusVisualStyle" Value="{x:Null}"/>
      <Setter Property="BorderBrush" Value="#D0D7E2"/>
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="Height" Value="23" />
  </Style>


</ResourceDictionary>